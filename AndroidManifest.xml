<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thehappypc.flashcards"
    android:versionCode="1"
    android:versionName="1.0" >

	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
		
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_deck"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:name="FlashCardApplication" android:permission="">
        
        <activity
            android:name="com.thehappypc.flashcards.launcher.LauncherActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.thehappypc.flashcards.viewer.DeckViewerActivity"
            android:uiOptions="splitActionBarWhenNarrow">
	        <meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.thehappypc.flashcards.launcher.LauncherActivity" />
        </activity>
        <activity android:name="ua.com.vassiliev.androidfilebrowser.AndroidFileBrowserExampleActivity"></activity>
        <activity android:name="ua.com.vassiliev.androidfilebrowser.FileBrowserActivity"></activity>
        <activity android:name="com.thehappypc.flashcards.deckeditor.DeckEditorActivity">
	        <meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.thehappypc.flashcards.launcher.LauncherActivity" />
        </activity>
        <activity android:name="com.thehappypc.flashcards.cardeditor.CardListEditorActivity">
	        <meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.thehappypc.flashcards.launcher.LauncherActivity" />
        </activity>
        <activity android:name="com.thehappypc.flashcards.cardeditor.CardEditorActivity">
		    android:uiOptions="splitActionBarWhenNarrow">
	        <meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.thehappypc.flashcards.deckeditor.DeckEditorActivity" />           
        </activity>
        <activity android:name="com.thehappypc.flashcards.preferences.FlashCardsPreferencesActivity">
        </activity>
        </application>

</manifest>
